{
  "name": "ci-tender",
  "version": "1.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "build:prod": "ng build --configuration production",
    "build:staging": "ng build --configuration staging",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "test:watch": "ng test --watch",
    "test:coverage": "ng test --code-coverage",
    "test:ci": "ng test --watch=false --browsers=ChromeHeadless --code-coverage",
    "e2e": "ng e2e",
    "e2e:headless": "ng e2e --headless",
    "lint": "ng lint",
    "lint:fix": "ng lint --fix",
    "format": "prettier --write \"src/**/*.{ts,html,scss,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,html,scss,json}\"",
    "analyze": "ng build --stats-json && webpack-bundle-analyzer dist/ci-tender/stats.json",
    "lighthouse": "lighthouse http://localhost:4200 --output=html --output-path=./lighthouse-report.html",
    "lighthouse:ci": "lhci autorun",
    "security:audit": "npm audit",
    "security:fix": "npm audit fix",
    "docker:build": "docker build -t ci-tender .",
    "docker:run": "docker run -p 80:80 ci-tender",
    "docker:compose": "docker-compose up -d",
    "docker:compose:down": "docker-compose down",
    "docker:compose:monitoring": "docker-compose --profile monitoring up -d",
    "clean": "rm -rf dist coverage .angular",
    "prebuild": "npm run clean",
    "postinstall": "npm run lint"
  },
  "dependencies": {
    "@angular/animations": "^17.0.0",
    "@angular/cdk": "^17.0.0",
    "@angular/common": "^17.0.0",
    "@angular/compiler": "^17.0.0",
    "@angular/core": "^17.0.0",
    "@angular/forms": "^17.0.0",
    "@angular/material": "^17.0.0",
    "@angular/platform-browser": "^17.0.0",
    "@angular/platform-browser-dynamic": "^17.0.0",
    "@angular/router": "^17.0.0",
    "lucide-angular": "^0.294.0",
    "ngx-pagination": "^6.0.3",
    "ngx-toastr": "^17.0.2",
    "rxjs": "~7.8.0",
    "swiper": "^11.0.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.14.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^17.0.0",
    "@angular/cli": "^17.0.0",
    "@angular/compiler-cli": "^17.0.0",
    "@lhci/cli": "^0.12.0",
    "@types/jasmine": "~5.1.0",
    "@types/node": "^18.18.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^8.0.0",
    "jasmine-core": "~5.1.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "lighthouse": "^11.0.0",
    "lint-staged": "^14.0.0",
    "prettier": "^3.0.0",
    "protractor": "^7.0.0",
    "sass": "^1.69.0",
    "typescript": "~5.2.0",
    "webdriver-manager": "^12.1.8",
    "webpack-bundle-analyzer": "^4.9.0"
  }
}
